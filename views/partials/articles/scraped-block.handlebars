<div class="row">
    <div class="col-xs-12 col-sm-3 justify-content-center project-image-div">
        <img class="img-fluid" src="{{image}}" alt="esq img">
    </div>
    <div class="col-xs-12 col-sm-7 project-content-div">
        <div>
            <b>{{title}}</b>
        </div>

        <div>
            {{description}}
        </div>
        <div>
            <a href="{{link}}">{{link}}</a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-2 justify-content-center project-image-div">
        <button class="btn btn-light" id="save-btn" data-id="{{_id}}" val="{{savedArticle}}">
            <i class="far fa-save"></i>
            <span id="scrape-btn-span">Save Article</span>
        </button>
    </div>
</div>